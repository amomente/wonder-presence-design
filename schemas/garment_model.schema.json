{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GarmentModel",
  "type": "object",
  "required": [
    "id",
    "name",
    "category",
    "intendedUse",
    "fabricComposition",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["LEGGINGS", "TOP", "BODYSUIT", "PANTS", "DRESS", "OUTER_LAYER"]
    },
    "intendedUse": { "type": "string" },
    "fabricComposition": { "type": "string" },
    "techFeatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "description", "expectedBenefit"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "THERMO_REGULATION",
              "ALOE_VERA_MICROCAPSULE",
              "COMPRESSION",
              "UV_PROTECTION",
              "ANTIMICROBIAL",
              "MOISTURE_WICKING"
            ]
          },
          "description": { "type": "string" },
          "expectedBenefit": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "patternEngineering": {
      "type": "object",
      "properties": {
        "hasGusset": { "type": "boolean" },
        "cutDirectionNotes": { "type": "string" },
        "compressionZones": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["area", "compressionLevel"],
            "properties": {
              "area": {
                "type": "string",
                "enum": ["ABDOMEN", "THIGHS", "BUST", "BACK", "ARMS", "NECK", "HIPS"]
              },
              "compressionLevel": {
                "type": "string",
                "enum": ["LIGHT", "MEDIUM", "HIGH"]
              }
            },
            "additionalProperties": false
          }
        },
        "seamPlacementNotes": { "type": "string" }
      },
      "additionalProperties": false
    },
    "sizeRange": {
      "type": "array",
      "items": { "type": "string" }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
